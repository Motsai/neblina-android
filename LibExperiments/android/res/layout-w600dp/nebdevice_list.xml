<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerVertical"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.motsai.nebctrlpanel.NebDeviceListActivity">

    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Available BLE Commands"
    android:id="@+id/Available_BLE_Commands"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/textView"
    android:layout_above="@+id/button_list_fragment"
    android:layout_alignStart="@+id/button_list_fragment"
        android:layout_marginBottom="10dp" />

    <FrameLayout
        android:id="@+id/nebdevice_detail_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.00" />

</LinearLayout>
