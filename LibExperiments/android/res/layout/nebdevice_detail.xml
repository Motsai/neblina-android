<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/neblina_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.motsai.nebctrlpanel.NebDeviceDetailFragment"
    android:weightSum="1">


    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listView"
        android:scrollbars="vertical"
        android:contextClickable="true"
        android:nestedScrollingEnabled="true"
        android:choiceMode="singleChoice"
        android:fastScrollEnabled="false"
        android:layout_weight="0.75"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2">
<!--
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.11"
        android:id="@+id/commandTable">
    </TableLayout>
        -->
    </ListView>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataVisualisation"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Visualize Data  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginLeft="30dp"
        android:layout_alignBaseline="@+id/dataVisualisation"
        android:layout_alignBottom="@+id/dataVisualisation"
        android:layout_toStartOf="@+id/dataVisualisation" />

    <ToggleButton
        android:text="CloudToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cloudStreamToggle"
        android:layout_alignTop="@+id/dataVisualisation"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:text="Cloud Stream  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cloudStream"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginLeft="30dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toStartOf="@+id/cloudStreamToggle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Version Number"
        android:id="@+id/versionText"
        android:layout_above="@+id/dataVisualisation"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/versionText"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Q1"
            android:id="@+id/textView1"
            android:layout_weight="1"
            android:layout_height="22dp" />

        <TextView
            android:text="Q2"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:text="Q3"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:text="Q4"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.Medium" />

    </LinearLayout>


</RelativeLayout>
